<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    
	<%= form.collection_select :user_id, User.all, :id, :first_name, :include_blank => "Select from list" %>
  </div>

 

  <div class="field">
    <%= form.label :product_id %>
    <%= form.collection_select :product_id, Product.all, :id, :picture, :include_blank => "Select from list" %>
  
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :order_quantity %>
  </div>

  <div class="field">
    <%= form.label :total_cost %>
    <%= form.number_field :total_cost, id: :order_total_cost %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :order_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
